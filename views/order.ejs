<%- include('partials/head.ejs')%>

<style>



    .image img{
        width: 200px;
        height: 200px;
    }

    .details{
        margin-left: 300px;
        /* margin-top: -50px; */
        margin-top: 20px;
        position: absolute;
    }


    

    .card{
        width: 100%;
        
    }

    .card .order{
        margin-top: 80px;
         margin-left: 25px;
          font-size: 26px;
          font-weight: 800;
    }

    .card .orderPlace{
        margin-left: 1180px;
         margin-top: 80px;
          font-size: 18px;
    }

    .card .row{
        border: 1px solid lightgray;
        margin: 20px;
        padding: 20px;
    }


    .card .all{
        font-size: 30px;
        font-weight: 700;
        margin-left: 45%;

    }

    .shipping{
        
        margin-left: 1100px;
        font-size: 16px;
     
    }

    .expected .time{
        font-size: 20px;
        margin-left: 1035px;
        margin-top: 40px;
        color:red;
        
    }

    .status{
        font-size: 22px;
        margin-left: 280px;
        margin-top: -48px;
        color: Rgb(0,128,0);

    }


    
    

    
</style>

<div class="container" style="overflow-x: hidden;">
    <div class="card">
        <h1 class="all">All Orders</h1>
        <h1 class="order">Order #4445</h1>

        
  

        <p class="orderPlace">Order placed <%= new Date().toLocaleTimeString() %></p>
        
<%for (let i of product){%>

    

        <div class="row" style="margin-top: 20px; ">
            <div class="image">

                <img src="<%=i.url%>" alt="">
            </div>

            <div class="details" style="margin-top: 20px; ">
                <h1 style="margin-top: -20px; margin-left: -30px;"><%=i.name%></h1>
                <p style="font-size: 20px ; margin-left: -28px; margin-top: 10px;">₹<%=i.price%></p>
                <p style="font-size: 15px ; margin-left: -28px; margin-top: 10px; width: 500px;">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Esse quam fuga assumenda mollitia a. Totam, fugiat quidem?</p>
            </div>

            <div class="deliver" style="margin-left: 850px; margin-top: -180px;">
                <h1 style="margin-top: -15px; margin-left: -30px;">Delivery address</h1>
                <br>
                <br>

                <p style="width: 180px; font-size: 18px; margin-left: -29px; margin-top: -13px;">224 <br> 2 phase , Mohali</p>
            </div>

            <div class="shipping" style="   margin-top: -200px;">
                <h1 style="margin-top: 5px; margin-left: -20px;">Shipping updates</h1>
                <br>
                <br>

                


                <p style="margin-left: -20px;">f•••@example.com</p>
                <p style="margin-left: -20px;">1•••••••••40</p>
                
            </div>

            
            <div class="expected">
                <p class="time">Delivering In 15 Mintutes</p>
            </div>
            
    <a href="/order/<%= i._id%>" ><button style="margin-left: 45px; margin-top: -48px;" class="btn btn-primary">Cancel</button></i></button></a>
            
    <div class="status">
        <% if (i.status === 'delivered') { %>
          <p class="time">Delivered</p>
        <% } else if (i.status === 'pending') { %>
          <p class="time">Pending</p>
        <% } else if (i.status === 'processing') { %>
            <p class="time">Processing</p>
          <% } else if (i.status === 'shipped') { %>
            <p class="time">Shipped</p>
          <% }  %>
          
      </div>

        </div>
        
        <%}%>
    </div>
</div>
<%- include('partials/body.ejs')%>
        